<Window x:Class="Fias.Update.FiasProgressInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Fias.Update"
        Title="FiasDbCacheProgressInfo" Height="140" Width="700" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" ResizeMode="CanMinimize" WindowStyle="None" Topmost="True" BorderThickness="1">
    <Grid Height="140">
        <Grid.RowDefinitions>
            <RowDefinition Height="16" />
            <RowDefinition Height="52" />
            <RowDefinition Height="26" />
            <RowDefinition Height="30" />
            <RowDefinition Height="16" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Text="" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontWeight="Bold" FontSize="14" Name="TextBlock"
                   TextWrapping="Wrap"/>        
        <ProgressBar Grid.Row="2" Width="650" Name="ProgressBar"/> 
        <Button Grid.Row="3" Width="95" Height="26" Content="Отмена" Click="Button_Click" Name="btnCancel"/>
    </Grid>
</Window>
